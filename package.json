{
  "name": "enkryptify-cli",
  "version": "1.0.0",
  "description": "CLI for Enkryptify",
  "type": "module",
  "main": "src/cli.ts",
  "bin": {
    "ek": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --format esm --minify",
    "start": "bun run dist/cli.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "ink": "^5.0.1",
    "ink-spinner": "latest",
    "keytar": "^7.9.0",
    "open": "^11.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
